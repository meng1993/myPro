.discount-img {
    width: 670rpx;
    height: 220rpx;
    margin: 0 40rpx 0;
    box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.10);
    position: relative;
    border-radius: 5px;
}

.discount-detail {
    position: absolute;
    top: 0;
    left: 0;
    width: 614rpx;
    height: 148rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 28rpx;
    color: #fff;
}

.discount-left {
    display: flex;
    flex-direction: column;
}

.noColor {
    background-color: rgba(0, 0, 0, 0);
}

.discount-title {
    font-size: 32rpx;
    margin-bottom: 4rpx;
    font-weight: bold;
}

.discount-indate {
    font-size: 24rpx;
}

.discount-right {
    font-size: 60rpx;
    font-weight: bold;
}

.discount-explain {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 614rpx;
    height: 72rpx;
    font-size: 24rpx;
    color: #666;
    line-height: 72rpx;
    padding: 0 28rpx;
}

.vux-circle-demo {
    text-align: center;
}

.vux-circle-demo > div {
    margin-left: auto;
    margin-right: auto;
}

.circle-demo-range {
    width: 250px;
    margin-top: 25px;
    margin-bottom: 25px;
}
