@import '../../templates/courseCell/courseCell.wxss';
@import '../../templates/group-temp/group-temp.wxss';

.group {
    min-height: 1138rpx;
    background-color: #f9eddb;
    padding: 34rpx 28rpx;
}

.group-top {
    box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.10);
    border-radius: 5px;
    position: relative;
    padding-bottom: 28rpx;
}

.circle {
    position: absolute;
    width: 36rpx;
    height: 36rpx;
    background-color: #f9eddb;
    border-radius: 36rpx;
}

.circle-left {
    left: -18rpx;
}

.circle-right {
    right: -18rpx;
}

.group-img {
    width: 694rpx;
    height: 784rpx;
}

.group-countUp {
    height: 192rpx;
    background: #f9f9f9;
    text-align: center;
}

.countUp-text {
    display: inline-block;
    font-size: 26rpx;
    color: #666;
    margin: 40rpx auto 20rpx;
}

.countUp-time {
    display: flex;
    align-items: center;
    justify-content: center;
    color: 353535;
    font-size: 36rpx;
}

.countUp-unit {
    display: inline-block;
    width: 66rpx;
    height: 48rpx;
    background: #353535;
    color: #fff;
    text-align: center;
    line-height: 48rpx;
    border-radius: 2px;
    margin: 0 4rpx;
    font-weight: bold;
}

.group-start {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 282rpx;
    align-items: center;
    padding: 20rpx 0 0;
    background: rgba(0, 0, 0, 0);
}

.group-balance {
    font-size: 32rpx;
    color: #353535;
}

.group-people {
    color: #ee7f00;
    font-size: 60rpx;
    font-weight: bold;
}

.group-notice {
    font-size: 24rpx;
    color: #999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.notice-icon {
    font-size: 26rpx;
    color: #999;
    display: flex;
    margin-right: 8rpx;
}

.group-bottom {
    margin-top: 30rpx;
    padding-bottom: 20rpx;
}

.group-fail {
    font-size: 32rpx;
    color: #353535;
    text-align: center;
    margin: 40rpx auto 30rpx;
}

.group-buyAgain {
    background: #f8f8f8;
    border: 1px solid rgba(5, 5, 5, 0.10);
    color: #353535;
    margin: 28rpx auto 28rpx;
}

.group-bottom {
    box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.10);
    border-radius: 5px;
    position: relative;
}

.circle-member {
    position: absolute;
    width: 48rpx;
    height: 54rpx;
    background-color: #f9eddb;
    border-radius: 48rpx;
    top: -24rpx;
    left: 335rpx;
}

.group-go-icon {
    position: absolute;
    width: 20rpx;
    height: 12rpx;
    top: 0;
    left: 349rpx;
}

.allMember {
    font-size: 32rpx;
    color: #666;
    padding: 44rpx 28rpx 30rpx;
    display: inline-block;
}
