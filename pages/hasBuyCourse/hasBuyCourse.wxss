.btn_group{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100rpx;
}
.btn_group .btn_common{
  position: relative;
  width: 140rpx;
  height: 66rpx;
   float: left; 
  text-align: center;
  line-height: 66rpx;
  margin: 17rpx 25rpx;
  font-size: 26rpx;
  color: #999999;
}
.btn_group .active{
  color: #EE7F00;
}
.btn_group .btn_common image{
  position: absolute;
  left: 0;
  top: 0;
  width: 140rpx;
  height: 66rpx;
} 
 .btn_group .btn_common .btn_type{
  position: absolute;
  width: 100%;
  height: 100%;
  font-size: 26rpx; 
  left: 0;
  top:0;
  line-height: 58rpx;
}  
