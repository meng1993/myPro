@import '../../templates/courseDirectoryCell/courseDirectoryCell.wxss';
@import '../index/index.wxss';

.back {
    width: 100%;
    height: 468rpx;
    position: relative;
}

.live-countDown {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 100rpx;
    background: rgba(0, 0, 0, 0.6);
    width: 694rpx;
    padding: 0 28rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.index-live-img {
    width: 178rpx;
    height: 44rpx;
    margin-right: 20rpx;
}

.countUp-time {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #353535;
    font-size: 26rpx;
    font-weight: bold;
    background: none;
    position: relative;
}

.countUp-unit {
    width: 46rpx;
    height: 36rpx;
    background: #353535;
    color: #fff;
    text-align: center;
    line-height: 36rpx;
    border-radius: 2px;
    margin-right: 4rpx;
    opacity: 1;
    font-weight: normal;
    /* background: rgba(255, 255, 255, 1) */
}

.market {
    height: 160rpx;
    padding: 0 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
}

.shareicon {
    position: absolute;
    font-size: 36rpx;
    color: #888;
    bottom: 80rpx;
    right: 26rpx;
}

.market-title {
    color: #000;
    font-weight: bold;
    font-size: 36rpx;
}

.market-content {
    color: #999;
    font-size: 28rpx;
    margin-top: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 660rpx;
}

.course-desc {
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #353535;
    font-size: 36rpx;
    font-weight: bold;
}

.footer-text {
    display: flex;
    height: 100%;
    align-items: center;
    padding: 0 28rpx 0 0;
    justify-content: space-between;
}

.appoint-num {
    margin-left: 96rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #353535;
    display: flex;
    align-items: center;
}

.sign-up {
    font-size: 32rpx;
    color: #fff;
    background-color: #ee7f02;
}

.notStart {
    background: rgba(238, 127, 0, 0.4);
}
